@model Bloggie.Web.Models.Request.TagRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2 input-title">
    <div class="container">
        <h1 class="">Tags-Admin</h1>
    </div>
</div>
<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    @if(Model != null)
    {
        <form method="post" class="p-5 rounded shadow-lg bg-light">
            <h2 class="text-center mb-4">Edit Tag</h2>
            <div class="mb-3">
                <label class="form-label" for="name">Tag Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter Tag Name" asp-for="Name">
            </div>
            <div class="mb-3">
                <label class="form-label" for="displayname">Display Name</label>
                <input type="text" class="form-control" id="displayname" placeholder="Enter Display Name"
                       asp-for="DisplayName">
            </div>
            <div class="text-center">
                <button type="submit" class="text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                    <i class="bi bi-floppy-fill"></i>
                    <span class="ms-2">Save Changes</span>
                </button>
            </div>
        </form>
    }
    else
    {
        <p>Tag not found!</p>
    }

</div>
