@model Bloggie.Web.Models.Response.GetTags

<div class="modal fade" id="DeleteProduct-@Model.TagId" aria-labelledby="DeleteProductLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" style="text-align: center;" id="deleteProductLabel">Delete Tag</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" name="TagId" value="@Model.TagId" />
                    <p>Are you sure you want to delete this Tag?</p>
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.TagId)</div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal" aria-label="Close">
                            <i class="bi bi-x-circle"></i>
                            <span style="margin-left: 5px;">CLOSE</span>
                        </button>
                        <button type="submit" class="btn btn-danger" asp-area="" asp-controller="AdminTags" asp-action="DeleteTag">
                            <i class="bi bi-trash"></i>
                            <span style="margin-left: 5px;">DELETE</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-x6MlryVmCqcO1hrBzACPrH6N2HpECFyMzjhsfS9vJE0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-CBQgW/1J+7mYRto20P7KoRMtr4xoXRwsj+Yfcvd9irB26BO/1+BSNxss5KICDDDa" crossorigin="anonymous"></script>
}
