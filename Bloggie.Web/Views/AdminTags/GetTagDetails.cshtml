@model List<Bloggie.Web.Models.Response.GetTags>
@{
    int SerialNo = 1;
}
<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<style>
    .table-custom {
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .table-custom th,
    .table-custom td {
        padding: 10px;
        border: 1px solid #dee2e6;
        background-color: #f8f9fa;
        text-align: center;
    }

    .table-custom th {
        background-color: #343a40;
        color: #fff;
    }

    .table-custom tbody tr:nth-child(even) {
        background-color: #e9ecef;
    }

    .material-symbols-outlined {
        font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 0,
            'opsz' 24
    }

    .icon-hover {
        transition: font-variation-settings 0.25s;
    }

    .icon-hover : hover {
        font-variation-settings:
            'FILL': 1,
            'WGHT': 200,
            'GRAD': 0,
            'opsz': 48
    }
</style>

<div class="bg-secondary bg-opacity-10 py-2 input-title mb-3">
    <div class="container">
        <h1 class="mb-6">Show Tags (Admin Panel)</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive mt-5">
            <table class="table table-striped table-bordered table-hover  text-center">
                <thead class="button-submit">
                    <tr>
                        <th>No</th>
                        <th>Tag Name</th>
                        <th>Display Name</th>
                        <th>Action Area</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@SerialNo</td>
                            <td>@x.TagName</td>
                            <td>@x.DisplayName</td>
                            <td>
                                <a asp-area="" asp-controller="AdminTags" asp-action="EditTags">
                                    <span class="material-symbols-outlined">
                                        edit_square
                                    </span>
                                </a>
                            </td>
                            @* <td>
                                <a asp-area="" asp-controller="AdminTags" asp-action="">
                                    <span class="material-symbols-outlined">
                                        delete
                                    </span>
                                </a>
                            </td> *@
                        </tr>
                        SerialNo++;
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted text-center mt-5">Oops - No Tags to display!</p>
    }
</div>
