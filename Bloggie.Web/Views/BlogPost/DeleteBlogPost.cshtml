@model Bloggie.Web.Models.Response.BlogDetailsResponse

<div class="modal fade" id="DeleteProduct-@Model.Id" tabindex="-1" aria-labelledby="DeleteProductLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteProductLabel">Delete Blog</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <form method="post" asp-action="DeleteBlogPost" asp-controller="BlogPost">
                    <input type="hidden" name="blogId" value="@Model.Id" />
                    <p class="mb-4">Are you sure you want to delete this Blog?</p>
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.Id)</div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="button" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" data-bs-dismiss="modal"><i class="bi bi-x-circle me-2"></i>Cancel</button>
                        <button type="submit" class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"><i class="bi bi-trash-fill me-2"></i>Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





