@model Bloggie.Web.Models.Response.BlogDetailsResponse

<div class="modal fade" id="DeleteProduct-@Model.Id" tabindex="-1" aria-labelledby="DeleteProductLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteProductLabel">Delete Blog</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <form method="post" asp-action="DeleteBlogPost" asp-controller="BlogPost">
                    <input type="hidden" name="blogId" value="@Model.Id" />
                    <p class="mb-4">Are you sure you want to delete this Blog?</p>
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.Id)</div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i>
                            <span class="ms-2">Close</span>
                        </button>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                            <span class="ms-2">Delete</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>