@model List<Bloggie.Web.Models.Response.BlogDetailsResponse>
@{
    var serialNo = 1;
}
<link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMfJt8e1r+i1IHMTZ5O/m/VZ6ZO6fVEF+JUsxZB" crossorigin="anonymous" />
<style>
    .table-custom {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .table-custom th,
    .table-custom td {
        padding: 15px;
        border-bottom: 1px solid #dee2e6;
        font-weight: 500;
        color: #212529;
    }

    .table-custom th {
        background-color: #007bff;
        color: #fff;
        text-align: left;
        text-transform: uppercase;
    }

    .table-custom tbody tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    .table-custom tbody tr:hover {
        background-color: #e9ecef;
    }

    .badge-custom {
        font-size: 90%;
        padding: 5px 10px;
        border-radius: 12px;
        background-color: #28a745;
        color: #fff;
    }

    .action-icons a {
        text-decoration: none;
        margin-right: 10px;
        transition: color 0.3s;
    }

    .action-icons a i {
        font-size: 20px;
    }

    .edit-icon {
        color: #007bff;
    }

    .delete-icon {
        color: #dc3545;
    }

    .view-icon {
        color: #ffc107;
    }

    .action-icons a:hover {
        color: #6c757d;
    }

    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }
    .btn-danger:hover {
        background-color: #c82333;
    }
    .table-container {
        position: relative;
        margin-top: 20px;
    }

</style>
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="mb-0 text-center">Show Blogs (Admin Panel)</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <div class="table-container">
            <div class="table-responsive">
                <table class="table-custom">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Blog Heading</th>
                            <th>Page Title</th>
                            <th>Date Of Publish</th>
                            <th>Author</th>
                            <th>Tag(s)</th>
                            <th>Action Area</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@serialNo</td>
                                <td>@x.Heading</td>
                                <td>@x.PageTitle</td>
                                <td>@x.PublishedDateS</td>
                                <td>@x.Author</td>
                                <td>
                                    @foreach (var tag in x.TagNames)
                                    {
                                        <span class="badge badge-custom">@tag</span>
                                    }
                                </td>
                                <td class="action-icons">
                                    <a asp-area="" asp-controller="BlogPost" asp-action="EditBlogPost" asp-route-BlogId="@x.Id">
                                        <i class="bi bi-pencil edit-icon"></i>
                                    </a>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#DeleteProduct-@x.Id">
                                        <i class="bi bi-trash delete-icon"></i>
                                    </a>
                                    @await Html.PartialAsync("DeleteBlogPost", x)
                                    <a href="#">
                                        <i class="bi bi-eye view-icon"></i>
                                    </a>
                                </td>
                            </tr>
                            serialNo++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="btn-container">
                <a class="btn btn-create" asp-area="" asp-controller="BlogPost" asp-action="CreateBlogPost"><i class="bi bi-plus-circle me-2"></i>CREATE POST</a>
            </div>
        </div>
    }
    else
    {
        <p class="text-muted text-center mt-5">Oops - No Blogs to display!</p>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-x6MlryVmCqcO1hrBzACPrH6N2HpECFyMzjhsfS9vJE0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-CBQgW/1J+7mYRto20P7KoRMtr4xoXRwsj+Yfcvd9irB26BO/1+BSNxss5KICDDDa" crossorigin="anonymous"></script>
}
