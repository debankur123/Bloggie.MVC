@model List<Bloggie.Web.Models.Response.BlogDetailsResponse>
@{
    int SerialNo = 1;
}
<!--suppress ALL -->
<style>

    :root {
        --primary-color: #4a90e2;
        --secondary-color: #e9ecef;
        --accent-color: #17a2b8;
        --text-color: #343a40;
        --background-color: #ffffff;
        --font-family-primary: 'Oswald', sans-serif;
        --badge-color-1: #ff7f50; /* Coral */
        --badge-color-2: #ffa500; /* Orange */
        --badge-color-3: #32cd32; /* Lime Green */
        --badge-color-4: #1e90ff; /* Dodger Blue */
        --badge-color-5: #9370db; /* Medium Purple */
    }

    body {
        font-family: var(--font-family-primary);
        color: var(--text-color);
        background-color: #f8f9fa;
    }

    .header-title {
        text-align: center;
        color: black;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 20px;
        font-size: 2rem;
    }

    .table-responsive {
        overflow-x: auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background: var(--background-color);
    }

    .table-custom {
        border-collapse: collapse;
        width: 100%;
    }

        .table-custom th,
        .table-custom td {
            padding: 15px;
            text-align: center;
            vertical-align: middle;
        }

        .table-custom th {
            background: var(--primary-color);
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .table-custom td {
            background-color: var(--background-color);
            color: var(--text-color);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .table-custom tbody tr:nth-child(even) {
            background-color: var(--secondary-color);
        }

        .table-custom tbody tr:hover {
            background-color: var(--accent-color);
            color: #fff;
            transform: scale(1.01);
            transition: transform 0.2s, background-color 0.2s, color 0.2s;
        }

    .badge-custom {
        margin-right: 5px;
        font-size: 90%;
        padding: 5px 10px;
        border-radius: 12px;
        color: #fff;
    }

    .badge-primary {
        background-color: var(--badge-color-1);
    }

    .badge-secondary {
        background-color: var(--badge-color-2);
    }

    .badge-success {
        background-color: var(--badge-color-3);
    }

    .badge-info {
        background-color: var(--badge-color-4);
    }

    .badge-warning {
        background-color: var(--badge-color-5);
    }

    .no-blogs {
        text-align: center;
        color: var(--text-color);
        font-size: 18px;
        margin-top: 50px;
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    .icon-hover {
        transition: font-variation-settings 0.25s;
    }

        .icon-hover:hover {
            font-variation-settings: 'FILL' 1, 'wght' 200, 'GRAD' 0, 'opsz' 48;
        }

    .action-icons a {
        text-decoration: none;
        margin-right: 10px;
        transition: color 0.3s;
    }

        .action-icons a i {
            font-size: 20px;
        }

    .edit-icon {
        color: #007bff; /* Blue */
    }

    .delete-icon {
        color: #dc3545; /* Red */
    }

    .view-icon {
        color: #28a745; /* Green */
    }

    .action-icons a:hover {
        color: var(--accent-color);
    }
</style>
<div class="bg-secondary bg-opacity-10 py-2 input-title mb-3">
    <div class="container">
        <h1 class="header-title">Show Blog Details (Admin Panel)</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive mt-5">
            <table class="table table-striped table-bordered table-hover text-center table-custom">
                <thead class="button-submit">
                    <tr>
                        <th>No</th>
                        <th>Blog Heading</th>
                        <th>Page Title</th>
                        <th>Date Of Publish</th>
                        <th>Author</th>
                        <th>Tag(s)</th>
                        <th>Action Area</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@SerialNo</td>
                            <td>@x.Heading</td>
                            <td>@x.PageTitle</td>
                            <td>@x.PublishedDateS</td>
                            <td>@x.Author</td>
                            <td>
                                @foreach (var tag in x.TagNames)
                                {
                                    <span class="badge badge-warning badge-custom">@tag</span>
                                }
                            </td>
                            <td class="action-icons">
                                <a asp-area="" asp-controller="BlogPost" asp-action="EditBlogPost" asp-route-BlogPostId="@x.BlogId">
                                    <i class="bi bi-pencil edit-icon"></i>
                                </a>
                                <a href="#">
                                    <i class="bi bi-trash delete-icon"></i>
                                </a>
                                <a href="#">
                                    <i class="bi bi-eye view-icon"></i>
                                </a>
                                @* @await Html.PartialAsync("DeleteTag", x) *@
                            </td>
                        </tr>
                        SerialNo++;
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="no-blogs">Oops - No Blogs to display!</p>
    }
    <div class="row justify-content-end mt-3">
        <div class="col-auto">
            <a asp-action="CreateBlogPost" class="btn btn-success btn-submit">
                <i class="bi bi-plus"></i>
                <span class="ms-2">CREATE NEW</span>
            </a>
        </div>
    </div>
</div>
