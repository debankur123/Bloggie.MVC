@model List<Bloggie.Web.Models.Response.BlogDetailsResponse>

@{
  ViewData["Title"] = "Home Page";
}

<div class="container mx-auto py-16 flex flex-wrap justify-between items-center">
  <div class="w-full md:w-1/2 px-4">
    <h1 class="text-4xl font-bold text-center mb-4 md:text-left">Bloggie.Web</h1>
    <p class="text-gray-700 text-base leading-relaxed md:text-lg">
      Welcome, curious minds! This is your one-stop shop for exploring the vast and ever-evolving world around you.
      Whether you're passionate about technology or simply enjoy learning new things, we offer a vibrant tapestry of
      insights, tips, and engaging discussions across various subjects. Dive deeper into the unknown, fuel your
      curiosity, and embark on a lifelong learning journey with us!
    </p>
  </div>
  <div class="w-full md:w-1/2 px-4">
    <img src="https://images.pexels.com/photos/3098683/pexels-photo-3098683.jpeg?auto=compress&cs=tinysrgb&w=600"
      alt="Dev Blogs" class="mx-auto rounded-lg shadow-md object-cover">
  </div>
</div>

<div class="container mx-auto py-16">
  <div class="flex flex-wrap -mx-4">
    @foreach (var blog in Model)
    {
      <div class="w-full md:w-1/3 px-4 mb-8 flex">
        <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
          <img class="w-full h-48 object-cover" src="@blog.BlogImageUrl" alt="@blog.Heading">
          <div class="p-6 flex flex-col flex-grow">
            <h2 class="text-2xl font-bold mb-2">@blog.Heading</h2>
            <p class="text-gray-700 text-base mb-4 flex-grow">@blog.ShortDescription</p>
            <p class="text-sm text-gray-500 mb-4">
              <span class="font-semibold">Author:</span> @blog.Author<br>
              <span class="font-semibold">Published on:</span> @blog.PublishedDateS
            </p>
            <div class="mb-4">
              @if (blog.TagNames != null && blog.TagNames.Any())
              {
                <div class="flex flex-wrap -m-1">
                  @foreach (var tag in blog.TagNames)
                  {
                    <span class="m-1 bg-blue-200 text-blue-800 text-xs font-semibold rounded-full px-3 py-1">
                      @tag
                    </span>
                  }
                </div>
              }
            </div>
            <div class="mt-auto">
              <a href="@Url.Action("ViewBlogDetails", "BlogPost", new { blogId = blog.Id })"
                class="inline-block bg-indigo-500 text-white py-2 px-4 rounded hover:bg-indigo-700">Read more...</a>
            </div>
          </div>
        </div>
      </div>
    }
  </div>
</div>
